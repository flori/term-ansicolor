#!/usr/bin/env ruby
#
## Little unix filter that colorizes diff output.
#

require 'termin/ansicolor'

include Termin::ANSIColor

ARGF.each do |line|
  STDOUT.print(
    case line
    when /^\+/ then green { line }
    when /^-/ then red { line }
    when /^(@@|diff)/ then blue { line }
    else line
    end
  )
end
